<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    
    <bean id="c1" class="bitcamp.java106.step07.Car">
        <property name="model" value="티코"/>
        <property name="maker" value="비트자동차"/>
        <property name="cc" value="890"/> 
        <property name="auto" value="true"></property>
        <property name="createdDate">
            <!-- String을 java.sql.Date 객체로 바꿔주는 변환기가 없기 때문에 
                d직접 Date객체를 생성해야 한다. -->
            <bean class="java.sql.Date" factory-method="valueOf">
            <!-- => static 메서드를 사용할 때 쓴다. -->
                <constructor-arg value="2018-5-8"></constructor-arg>
            </bean>
        </property>
    </bean>
</beans>







